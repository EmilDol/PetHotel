@using TravelEquipmentRenting.Core.Models
@model ProductEditViewModel
@{
    var categories = Model.Categories;
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 fs-5">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group m-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="4" value="@Model.Description"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PricePerDay"></label>
                <input asp-for="PricePerDay" type="number" value="@Model.PricePerDay" class="form-control">
                <span asp-validation-for="PricePerDay" class="small text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Categories"></label>
                <br />
                @foreach (var category in categories)
                {
                    <div class="border-1">
                        <input type="checkbox" value="@category.Id" name="CategoryCheckboxesFromUI" checked="@category.IsTagged" id="@category.Id">
                        <label for="@category.Id">@category.Name</label>
                    </div>
                }
                <span asp-validation-for="Categories" class="small text-danger"></span>
            </div>
            <div class="form-group m-3">
                <p><strong>Status: </strong> @Model.IsApproved</p>
            </div>
            <div class="form-group m-3">
                <p><strong>Is Rented: </strong> @Model.IsAvailable</p>
            </div>
            <div class="text-center m-3">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>