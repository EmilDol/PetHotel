@using TravelEquipmentRenting.Core.Models
@model ProductAllViewModel

<div class="card col-4 m-3" style="width: 20rem;">
    <img class="card-img-top mt-2" style="width: 18rem;"
         src="@Model.ImageUrl" alt="Book Image">
    <div class="card-body">

        <h5 class="card-title mt-1">@Model.Name</h5>
        <p class="mb-0">
            <strong>Description:</strong> @Model.Description
        </p>
        <p class="mb-0"><strong>Owner Name:</strong> @Model.OwnerName</p>
        <p><strong>Categories: </strong> @Model.CategoriesAsString</p>
    </div>

    <form class="input-group-sm" asp-route-id="@Model.Id" asp-controller="Products" asp-action="Details" method="get">
        <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
</div>