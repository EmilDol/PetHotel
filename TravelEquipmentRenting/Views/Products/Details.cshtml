@using TravelEquipmentRenting.Core.Models
@model ProductDetailsViewModel

<div>
    <h2 class="card-title mt-1">@Model.Name</h2>
    <div>
        <img class="card-img-top mt-2" style="width: 18rem;" src="@Model.ImageUrl" alt="Product Image">
    </div>
    <div>
        <p class="mb-0">
            <strong>Description:</strong> @Model.Description
        </p>
        <p class="mb-0"><strong>Owner Name:</strong> @Model.OwnerName</p>
        <p><strong>Categories: </strong> @Model.CategoriesAsString</p>
        <p><strong>Owner Phone: </strong> @Model.OwnerPhone</p>
        <p><strong>Owner Email: </strong> @Model.OwnerEmail</p>
        <p><strong>Date added: </strong> @Model.DateAdded</p>
        <p><strong>Price per day: </strong> @Model.PricePerDay</p>
    </div>

    <form class="input-group-sm" asp-route-id="@Model.Id" asp-controller="Rental" asp-action="Rent" method="post">
        <input type="submit" value="Rent" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
</div>