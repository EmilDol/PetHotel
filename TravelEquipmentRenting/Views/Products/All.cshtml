@using TravelEquipmentRenting.Core.Models
@model IEnumerable<ProductAllViewModel>
<div class="mb-5">
    <h3 class="text-center text-success">Do the search here</h3>
</div>

<div class="text-center row">
    @foreach (var product in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top mt-2" style="width: 18rem;"
             src="@product.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@product.Name</h5>
                <p class="mb-0">
                    <strong>Description:</strong> @product.Description
                </p>
                <p class="mb-0"><strong>Owner Name:</strong> @product.OwnerName</p>
                <p><strong>Categories: </strong> @product.CategoriesAsString</p>
            </div>

            <form class="input-group-sm" asp-route-movieId="@product.Id" asp-controller="Movies" asp-action="AddToCollection" method="post">
                <input type="submit" value="Mark as Watched" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>