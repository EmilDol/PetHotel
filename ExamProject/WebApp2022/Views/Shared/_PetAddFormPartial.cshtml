@using WebApp2022.Core.Models
@model PetAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea rows="4" asp-for="Description" class="form-control" placeholder="My pet is..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirements"></label>
                <textarea asp-for="Requirements" rows="4" class="form-control" placeholder="My pet needs..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Heigth"></label>
                <input type="number" asp-for="Heigth" class="form-control">
                <span asp-validation-for="Heigth" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weigth"></label>
                <input type="number" asp-for="Weigth" class="form-control">
                <span asp-validation-for="Weigth" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input type="number" asp-for="Age" class="form-control">
                <span asp-validation-for="Age" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                    <option value="Bird">Bird</option>
                    <option value="Reptile">Reptile</option>
                    <option value="Exotic">Exotic</option>
                    <option value="Hamster">Hamster</option>
                    <option value="Bugs">Bugs</option>
                </select>
                <span asp-validation-for="Type" class="small text-danger"></span>
            </div>
            
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>