@using WebApp2022.Core.Models.Announcements
@model AnnouncementMineViewModel

<div class="card col-4 m-3" style="width: 20rem;">
    <img class="card-img-top mt-2" style="width: 18rem;"
         src="@Model.ImageUrl" alt="Pet Image">
    <div class="card-body">
        <h5 class="card-title mt-1">@Model.Name</h5>
        <p class="mb-0">
            <strong>Date Starting: </strong> @Model.DateStartBabysitting
        </p>
        <p class="mb-0">
            <strong>Date Edninding: </strong> @Model.DateEndBabysitting
        </p>
        <p class="mb-0">
            <strong>Price: </strong> @Model.Price
        </p>
    </div>

    <form class="input-group-sm" asp-route-id="@Model.Id" asp-controller="Announcements" asp-action="Delete" method="get">
        <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
    @if (Model.IsAvailable == true)
    {
        <form class="input-group-sm" asp-route-id="@Model.Id" asp-controller="Requests" asp-action="Index" method="get">
            <input type="submit" value="Manage requests" class="fs-6 btn btn-success mb-3 p-2" />
        </form>
    }
</div>