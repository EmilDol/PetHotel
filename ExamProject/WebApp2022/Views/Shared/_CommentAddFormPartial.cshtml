@using WebApp2022.Core.Models.Comments
@model CommentAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ReceiverId" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="date" asp-for="Title" placeholder="Title..." class="form-control">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea type="date" asp-for="Content" placeholder="This user is..." class="form-control"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Send" />
            </div>
        </form>
    </div>
</div>