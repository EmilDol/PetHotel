@using WebApp2022.Core.Models.Comments
@model CommentAddViewModel
 
<div class="row">
    <form method="post" asp-action="AddComment" asp-controller="Account">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.ReceiverId" value="@Model.ReceiverId" name="ReceiverId" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" placeholder="Title..." class="form-control">
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea type="date" asp-for="Content" placeholder="This user is..." class="form-control"></textarea>
            <span asp-validation-for="Content" class="small text-danger"></span>
        </div>

        <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit" value="Send" />
        </div>
    </form>
</div>