@using Microsoft.AspNetCore.Identity
@using WebApp2022.Infrastructure.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Administration" asp-action="Index" asp-controller="Home" title="Switch view">Admin View</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link" asp-action="Edit" asp-controller="Account" title="Edit">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
