@using WebApp2022.Core.Models.Account
@using WebApp2022.Core.Models.Comments
@model DetailsAccountViewModel

<div class="col-4 m-3" style="width: 20rem;">
    <div class="card-body">
        <h5 class="card-title mt-1">@Model.FullName</h5>
        <p class="mb-0">
            <strong>Email: </strong> @Model.Email
        </p>
        <p class="mb-0">
            <strong>Phone number: </strong> @Model.PhoneNumber
        </p>
        <p class="mb-0">
            <strong>Town: </strong> @Model.Town
        </p>
        <p class="mb-0">
            <strong>UserName:</strong> @Model.UserName
        </p>
    </div>

    <form class="input-group-sm" asp-controller="Account" asp-action="Report" method="get">
        <input type="hidden" value="@Model.Id"/>
        <input type="submit" value="Report user" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
    <p>Add comment</p>
    <partial name="_CommentAddFormPartial" model="@(new CommentAddViewModel())"></partial>
    <p>Comments: </p>
    @foreach (var comment in @Model.Comments)
    {
        <partial name="_CommentDisplayPartial" model="@comment"></partial>
    }
</div>
