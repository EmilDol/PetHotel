@using WebApp2022.Core.Models.Account
@using WebApp2022.Core.Models.Comments
@model DetailsAccountViewModel

<div>
    <div class="col-md-4 offset-md-4">
        <h5 class="card-title mt-1">@Model.FullName</h5>
        <p class="mb-2">
            <strong>Email: </strong><%= Html.Encode(@Model.Email) %>
        </p>
        <p class="mb-2">
            <strong>Phone number: </strong> @Model.PhoneNumber
        </p>
        <p class="mb-2">
            <strong>Town: </strong> @Model.Town
        </p>
        <p class="mb-2">
            <strong>UserName:</strong> @Model.UserName
        </p>
        <div class="card m-3 p-2">
            <h5 class="mt-3">Add comment</h5>
            <partial name="_CommentAddFormPartial" model="@(new CommentAddViewModel{ReceiverId = Model.Id})"></partial>
        </div>
        <div class="card m-3 p-2">
            <h5 class="mt-3">Comments: </h5>
            @foreach (var comment in @Model.Comments)
            {
                <partial name="_CommentDisplayPartial" model="@comment"></partial>
            }
        </div>
    </div>
</div>

        
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}