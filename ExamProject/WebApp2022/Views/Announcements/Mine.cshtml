@using WebApp2022.Core.Models.Announcements
@model List<AnnouncementMineViewModel>

@{
    ViewBag.Title = "My Announcements";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
    <div class="row">
        @foreach (var announcement in Model)
        {
            <partial name="_MineAnnouncementDetailsAtMinePage" model="@announcement" />
        }
    </div>
}
else
{
    <h3 class="text-center">You have no announcements registered yet!</h3>
}