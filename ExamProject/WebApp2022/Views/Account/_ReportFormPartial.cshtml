@using WebApp2022.Core.Models.Account
@model ReportAddViewModel
<div class="row">
    <div>
        <form method="post" asp-action="Report" asp-controller="Account">
            <input name="UserId" type="hidden" value="@Model.UserId"/>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control m-2" placeholder="This user did..." />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <input type="submit" value="Report user" class="fs-6 btn btn-danger m-2 p-2" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}